<Window x:Class="Platforma_Educationala.MVVM.View.ProfessorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platforma_Educationala.MVVM.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Profesor" Height="450" Width="800" Background="SeaGreen">
    <Window.DataContext>
        <local:ProfessorVM></local:ProfessorVM>
    </Window.DataContext>
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Button                
                Content="Meniu Absente"
                Command="{Binding AbsencesCommand}"/>

            <Button                
                Content="Meniu Note"
                Command="{Binding }"/>

            <Button                
                Content="Meniu Materiale didactice"
                Command="{Binding }"/>

            <Button                
                Content="Meniu Medii"
                Command="{Binding }"/>
        </StackPanel>
    </Grid>
</Window>
